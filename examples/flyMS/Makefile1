# project name 
# change to match your main c file
TARGET = flyMS


TOUCH 	 := $(shell touch *)
CC	:= gcc
LINKER   := gcc -o
CFLAGS	:= -c -Wall -g  
#-Wextra -Wall -pedantic
LFLAGS	:= -lm -lrt -lpthread -lrobotics_cape

OBJ_DIR = obj
SRC_DIR = src
INC_DIR = include

SOURCES  := $(wildcard src/*.c)
INCLUDES := $(wildcard include/*.h)
OBJECTS  := $(notdir $(SOURCES))
OBJECTS  := $(addprefix obj/, $(OBJECTS))
OBJECTS  := $(OBJECTS:$%.c=$%.o)



# OBJECTS  := $(addprefix $(OBJ_DIR)/, SOURCES:$%.c=$%.o)

RM := rm -f

INSTALL_DIR = /usr/bin/

tmp = $(TARGET): $(OBJECTS)

#@echo "object directory is $(OBJECTS)"
$(info $$OBJECTS is [${OBJECTS}])


# linking Objects
$(TARGET): $(OBJECTS)
	@$(LINKER) $(@) $(OBJECTS) $(LFLAGS)
	@echo
	@echo "Linking Complete"


# compiling command
#$(OBJECTS): %.o : %.c
$(TARGERT): $(SOURCES)
	@$(TOUCH) $(CC) $(CFLAGS) -c $< -o $(@)
	@echo "Compiled "$<" successfully!"


# install to /usr/bin
$(phony all) : $(TARGET)
.PHONY: install

install: $(all)
	@$(MAKE)
	@install -m 0755 $(TARGET) $(INSTALL_DIR)
	@echo
	@echo "Project "$(TARGET)" installed to $(INSTALL_DIR)"
	@echo
	
clean:
	@$(RM) $(OBJECTS)
	@$(RM) $(TARGET)
	@echo "Cleanup complete!"

	
